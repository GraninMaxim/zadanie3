        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zadanie3"
        mc:Ignorable="d" Activated="Window_Activated"
        Title="Autorization" Height="450" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="Login" HorizontalAlignment="Center" Margin="0,102,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Password" HorizontalAlignment="Center" Margin="0,189,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Center" Margin="0,275,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Войти как гость" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_1"/>

    </Grid>
</Window>
